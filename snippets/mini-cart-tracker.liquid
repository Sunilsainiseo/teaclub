<style>
  .upsell-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }

  .progress-bar{
    background-color: #E2E4E3;
    display: flex;
    height: 1em;
    width: 100%;
    border-radius: 0.75em;
    padding: 3px;
    position: relative;
    align-items: center;
  }
  
  .progress-bar-done{
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    background-color: {{ progress_bar_color }};
    background-image: repeating-linear-gradient(
      to left,
      {{ progress_bar_color }},
      {{ progress_bar_color | color_lighten: 10 }},
      {{ progress_bar_color | color_lighten: 20 }}
    );

    box-shadow: 0 5px 5px -6px {{ progress_bar_color }};

    border-radius: 0.75em;
    height: 100%;
    transition: 1s ease 0.3s;
    max-width: 100%;
    width: {{ shipping_percentage_fraction }}%;
  }
  
  .free-shipping-icon{
    position: absolute;
    right: 0;
    width: 40px;
    height: 40px;
    border-radius: 20px;
    background-color: #E2E4E3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .progress-bar::before{
    content: ' ';
  }

  .iconicion{
    box-shadow: 0 0 10px rgba(62, 101, 207, 0.5);
    border: 1px solid black;
    transition: 1s ease 0.7s;
  }


.cart-uniq-wrapper {
width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 2rem;
}
.cart-uniq-bar {
  position: relative;
  background: #ccc;
  height: 1rem;
      display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    /* box-shadow: 0 5px 5px -6px #e00522;*/
    border-radius: 40px;
    transition: 1s ease 0.3s;
   max-width: 100%;
}
  .cart-uniq-progress {
    position: absolute;
    top: 0;
    left: 0;
    background-color: {{ progress_bar_color }};
    width: {{ shipping_percentage_fraction }}%;
    min-width: 0;
    max-width: 100%;
   height: 100%;
   display: block;
    border-radius: 40px;
  }
  .cart-uniq-progress:after {
    content: "";
    width: 15px;
    height: 15px;
    position: absolute;
    right: 0;
    top: 0;
    background-color: {{ progress_bar_color }};
  }
  .cart-uniq-success ~ .cart-uniq-bar .cart-uniq-progress {
    background-color: {{ progress_bar_success_color }};
    border-radius: 40px;
  }
   .cart-uniq-success ~ .cart-uniq-bar .cart-uniq-progress::after {
    background-color: {{ progress_bar_success_color }};
     border-radius: 40px;
  }

</style>